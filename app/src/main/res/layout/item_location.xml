<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_location_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="@dimen/simple_padding_medium">

    <RadioButton
        android:id="@+id/item_location_active_radio_button"
        android:layout_width="@dimen/location_radio_size"
        android:layout_height="@dimen/location_radio_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/simple_padding_medium"
        android:clickable="false"
        android:focusable="false"
        android:theme="@style/RadioButtonStyle"/>

    <TextView
        android:id="@+id/item_location_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/simple_padding_medium"
        android:background="@color/colorOpaqueWhite"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="1"
        android:text="@string/placeholder"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_primary"
        android:textStyle="bold"/>

</LinearLayout>